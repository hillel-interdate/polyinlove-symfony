<h1 class="ui header right">
    <i class="user icon"></i>
    <div class="content">
        <span class="username">{{ user.username }}</span>
        <div class="sub header">User profile</div>
    </div>
</h1>


<div class="left close">
    <i class="icon remove circle olive big " onclick="$.kfModal.close();"></i>
</div>

<div class="clear"></div>

<div class="ui divider"></div>

<div class="ui secondary menu">
    <a class="item active" data-tab="1">
        {# <i class="sign in icon circular"></i> #}
        details
    </a>
    <a class="item" data-tab="2">
        {# <i class="user icon circular"></i> #}
        profile
    </a>
    <a class="item" data-tab="3">
        {# <i class="info icon circular"></i> #}
        about me
    </a>
    <a class="item" data-tab="4">
        {# <i class="info icon circular"></i> #}
        admin
    </a>
</div>
<div class="ui tab segment active" data-tab="1">

    <div class="ui large ribbon label">Ip of last entrance</div>
    <p>{{ user.ip }}</p>
    <p><b>date:</b> {{ user.lastLoginAt|date("d/m/Y H:i") }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label">user name</div>
    <p>{{ user.username }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label"> Facebook id</div>
    <p>{{ user.facebook }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label">E-mail</div>
    <p>{{ user.email }}</p>
    <div class="ui divider"></div>


    <div class="ui large ribbon label">Telephone</div>
    <p>{{ user.phone }}</p>
    <div class="ui divider"></div>


    <div class="ui large ribbon label">sex</div>
    <p>{{ user.gender.name }}</p>
    <div class="ui divider"></div>


    {# <div class="ui large ribbon label">מחפש/ת</div>
    <p>{{ user.lookingGender.name }}</p><div class="ui divider"></div> #}

    <div class="ui large ribbon label">birthdate</div>
    <p>{{ user.birthday|date('d/m/Y') }}</p>

</div>

<div class="ui tab segment" data-tab="2">

    <div class="ui large ribbon label">country of residence</div>
    <p>{{ user.country.name }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label">area of residence</div>
    <p>{{ user.region.name }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label">city</div>
    <p>{{ user.city.name }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label">height</div>
    <p>{{ user.height }}</p>
    <div class="ui divider"></div>

    {# <div class="ui large ribbon label">עיר</div> #}
    {# <p>{{ user.body.name }}</p><div class="ui divider"></div> #}

    <div class="ui large ribbon label">family status</div>
    <p>{{ user.relationshipStatus.name }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label">relationship type</div>
    <p>{{ user.relationshipType.name }}</p>
    <div class="ui divider"></div>

{#    <div class="ui large ribbon label">details</div>#}
{#    <p>{{ user.relationshipTypeDetails }}</p>#}
{#    <div class="ui divider"></div>#}

    <div class="ui large ribbon label">sexual preference</div>
    <p>{{ user.sexOrientation.name }}</p>
    <div class="ui divider"></div>

{#    <div class="ui large ribbon label">details</div>#}
{#    <p>{{ user.sexOrientationDetails }}</p>#}
{#    <div class="ui divider"></div>#}

    <div class="ui large ribbon label">I am looking for:</div>
    <p>
        {% for lookingFor in user.lookingFor %}
            {# {{ loop.last ? lookingFor.name : lookingFor.name . ', ' }} #}
        {% endfor %}
    </p>
    <div class="ui divider"></div>

{#    <div class="ui large ribbon label">details</div>#}
