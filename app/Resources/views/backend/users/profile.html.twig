{#    <div class="ui divider"></div>#}

    <div class="ui large ribbon label">ethnicity</div>
    <p>{{ user.origin.name }}</p>
    <div class="ui divider"></div>

    <div class="ui large ribbon label">smoking?</div>
    <p>{{ user.smoking.name }}</p>
    <div class="ui divider"></div>


    {# <div class="ui large ribbon label">כאן למטרת</div> #}
    {# <p> #}
    {# {% for purpose in user.purposes %} #}
    {# {{ purpose.name }}{% if not loop.last %},{% endif %} #}
    {# {% endfor %} #}
    {# </p> #}


</div>
<div class="ui tab segment" data-tab="3">
    {# <div class="field {% if form.about.vars.errors|length %}error{% endif %}"> #}
    {# <div class="label">{{ form_label(form.about) }}</div> #}
    {# <div class="textarea">{{ form_widget(form.about) }}</div> #}
    {# </div> #}

    <div class="ui large ribbon label">about me</div>
    <p>{{ user.about }}</p>
    <div class="ui divider"></div>

    {# <div class="field {% if form.looking.vars.errors|length %}error{% endif %}"> #}
    {# <div class="label">{{ form_label(form.looking) }}</div> #}
    {# <div class="textarea">{{ form_widget(form.looking) }}</div> #}
    {# </div> #}

    <div class="ui large ribbon label">I am looking for:</div>
    <p>{{ user.looking }}</p>
    <div class="ui divider"></div>

    <div class="field">
{#        <div class="ui large ribbon label">Who may message me/us:</div>#}
        {% if user.getContactGender|length > 0 %}
            <div class="chkright">
                {% for contact in user.getContactGender %}
                    <div class="checkboxes clearfix">
                        {{ contact.name }}
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <br> anybody
        {% endif %}
    </div>

    <div class="field">
        <div class="ui large ribbon label" style="display: block; width: 13%; margin-top: 18px;">גיל</div>
        <div class="label" style="width: 24px;margin-top: 6px; display: inline-block;"> from -</div>
        <div class="select" style="width:28px; display: inline-block;">{{ user.ageFrom }}</div>
        <div class="label" style="width: 29px; margin-top: 7px; display: inline-block;">to -</div>
        <div class="select" style="width:43px; display: inline-block">{{ user.ageTo }}</div>
    </div>
</div>

<div class="ui tab segment" data-tab="4">

    <div class="ui large ribbon label">Email me about new messages</div>
    <p>{% if user.isSentEmail %}yes{% else %}no{% endif %}</p>

    <div class="ui large ribbon label">Push notifications to my phone about new messages</div>
    <p>{% if user.isSentPush %}yes{% else %}no{% endif %}</p>

    <div class="ui large ribbon label">user appears on main page</div>
    <p>{% if user.isOnHomepage %}yes{% else %}no{% endif %}</p>
    <div class="ui divider"></div>

    {% if user.adminComments|length %}
        <div class="ui large ribbon label">comments</div>
        <p>{{ user.adminComments }}</p>
        <div class="ui divider"></div>
    {% endif %}

    {% if user.banReason|length %}
        <div class="ui large ribbon label">user was blocked because</div>
        <p>{{ user.banReason }}</p>
        <div class="ui divider"></div>
    {% endif %}

    {% if user.freezeReason|length %}
        <div class="ui large ribbon label">user was frozen because</div>
        <p>{{ user.freezeReason }}</p>
    {% endif %}

</div>

<div class="clear"></div>
